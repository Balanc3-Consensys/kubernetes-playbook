{
  "kind": "ConfigMap",
  "apiVersion": "v1",
  "metadata": {
     "name": "{{item.name}}"
  },
  {% if item.data is defined %}
  "data": {{ item.data | to_nice_json }} 
  {% endif %}

  {% if item.from_files is defined %}
  "data": {
    {% for from_file in item.from_files %}
    "{{from_file}}": {% filter to_nice_json %}{% include from_file %}{% endfilter %}{% if not loop.last %},
    {% endif %}
    {% endfor %}
  }
  {% endif %}

}
