{
  "kind": "Secret",
  "apiVersion": "v1",
  "metadata": {
     "name": "{{item.name}}"
  },
  {% if item.data is defined %}
  "data": {{ item.data | to_nice_json }} 
  {% endif %}

  {% if item['from-files'] is defined %}
  "data": {
    {% for from_file in item['from-files'] %}
    "{{from_file}}": "{% filter b64encode %}{% include from_file %}{% endfilter %}"{% if not loop.last %},
    {% endif %}
    {% endfor %}
  }
  {% endif %}
}
